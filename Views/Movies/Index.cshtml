@model MvcMovie.Models.MovieGenreViewModel

@{
    ViewData["Title"] = "Index";
}
<div class="movie-index text-light container-fluid w-100 h-100">
<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Movies" asp-action="Index" method="get">
    <p>
        <select asp-for="MovieGenre" asp-items="Model.Genres">
            <option value="">All</option>
        </select>

        Title: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<div class="movie-list">

    
@foreach (var item in Model.Movies) {

        <div class="movie-item">
            <div class="movie-item-image">
<img src="@Html.DisplayFor(modelItem => item.ImageUrl)" alt="@Html.DisplayFor(modelItem => item.Title)">
            </div>
            <div class="movie-item-title">
@Html.DisplayFor(modelItem => item.Title)
            </div>
            <div class="movie-item-release">
                Release Date : 
@Html.DisplayFor(modelItem => item.ReleaseDate)
            </div>
            <div class="movie-item-genre">
 @Html.DisplayFor(modelItem => item.Genre)
            </div>
            <div class="movie-item-price">
 @Html.DisplayFor(modelItem => item.Price)
            </div>
            <div class="movie-item-rating">
            @Html.DisplayFor(modelItem => item.Rating)
        </div>
        <div class="movie-item-actions">
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </div>
        </div>
        
           
            
            
        
            
            
       
}
</div>
 
  

</div>
